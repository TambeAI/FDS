#include<iostream> 
#include<string> 
using namespace std; 
struct node 
{  
 int p,key; 
 string name; 
 node *next; 
}; 
class student 
{ 
 public : 
   
  node *head,*tail,*nnode,*temp,*temp1,*temp2,*temp3; 
  student () 
  { 
   head=tail=NULL; 
  } 
  void create(); 
  void display(); 
  void insertion(); 
  void insertion1(); 
  void delete1(); 
  void delete2(); 
  void delete3(); 
}; 
void student::create() 
{    
 char ch; 
  
 do 
 { 
  nnode=new node; 
  cout<<"\nenter prn no "; 
  cin>>nnode->p; 
  cout<<"\nenter name"; 
  cin>>nnode->name; 
  nnode->next=NULL; 
      
  if (head==NULL && tail==NULL) 
  { 
     
    head=tail=nnode; 
  } 
  else 
  { 
   tail->next=nnode; 
   tail=nnode; 
  } 
  cout<<"\ndo you want to continue y/n"; 
  cin>>ch; 
        
 }while(ch=='y');     
}; 
void student::display() 
{   int count=0; 
 temp=head; 
 cout<<endl<<"PRN \t"<<"NAME"<<endl; 
 while(temp!=NULL) 
 { 
  cout<<endl<<temp->p<<"\t\t\t"<<temp->name<<endl; 
  temp=temp->next; 
  count=count+1; 
 } 
 cout<<"\ncount"<<count;  
}; 
void student::insertion() 
{    cout<<"\n insert president"; 
 nnode=new node; 
 cout<<"\nenter prn no "; 
 cin>>nnode->p; 
 cout<<"\nenter name"; 
 cin>>nnode->name; 
 //nnode->next=NULL; 
 nnode->next=head; 
 head=nnode; 
 } ; 
 void student::insertion1() 
 {   cout<<"\n insert member befor key"; 
  int key; 
  nnode=new node; 
 cout<<"\nenter prn no "; 
 cin>>nnode->p; 
 cout<<"\nenter name"; 
 cin>>nnode->name; 
 cout<<"\nkey"<<" "; 
 cin>>key; 
 temp=head; 
 while((temp->next)->p!=key) 
 { 
  temp=temp->next;} 
  temp1=temp->next; 
  temp->next=nnode; 
  nnode->next=temp1;  
 }; 
 void student::delete1() 
 {  cout<<"\n delete presidant "; 
  temp=head; 
  head=head->next; 
  delete temp; 
 }; 
 void student::delete2() 
 {   cout<<"\n deletion of secretary node"; 
  temp=head; 
  while(temp->next!=tail) 
  { 
   temp=temp->next; 
  } 
  temp1=tail; 
  tail=temp; 
  delete temp1; 
  tail->next=NULL;  
 }; 
 void student::delete3() 
 {  cout<<"\ndeletion of memeber node"; 
 int key; 
  cout<<"\nenter prn  no which to deleted"; 
  cin>>key; 
  temp=head; 
  while((temp->next)->p!=key) 
  { 
   temp=temp->next; 
  } 
  temp2=temp->next; 
  temp->next=temp2->next; 
  delete temp2; 
   
 };  
int main() 
{   int count;  
 student b,b1; 
 b.create(); 
 b.display(); 
 b.insertion(); 
 b.display(); 
    b.delete1(); 
    b.display(); 
    b.delete2(); 
 b.display(); 
     b.delete3(); 
     b.display(); 
     cout<<"\n2nd linklist"; 
 b1.create();   
 b1.display(); 
    cout<<"\nconcatination"; 
    if(b.head->next==NULL) 
    { 
  
 b.tail=b.head; 
    } 
    b.tail->next=b1.head; 
 b.display(); 
  
 return 0; 
